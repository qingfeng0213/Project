<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <RadioGroup
                android:id="@+id/indent_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/indent_but_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="全部订单"
                    android:gravity="center"
                    android:drawableTop="@drawable/common_icon_all"/>
                <RadioButton
                    android:id="@+id/indent_but_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="待付款"
                    android:gravity="center"
                    android:drawableTop="@drawable/common_icon_pay_n"/>
                <RadioButton
                    android:id="@+id/indent_but_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="待收货"
                    android:gravity="center"
                    android:drawableTop="@drawable/common_icon_receive_n"/>
                <RadioButton
                    android:id="@+id/indent_but_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="待评价"
                    android:gravity="center"
                    android:drawableTop="@drawable/commom_icon_comment_n"/>
                <RadioButton
                    android:id="@+id/indent_but_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="已完成"
                    android:gravity="center"
                    android:drawableTop="@drawable/common_icon_finish_n"/>
            </RadioGroup>
        </LinearLayout>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/orderrexy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.jcodecraeer.xrecyclerview.XRecyclerView>
            <Button
                android:id="@+id/allorder_btn_quxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderrexy"
                android:layout_margin="10dp"
                android:background="@drawable/site_button"
                android:text="删除订单"/>
            <Button
                android:id="@+id/allorder_btn_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderrexy"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:text="去支付"
                android:textColor="#FFF"
                android:background="#c60646"/>
        </RelativeLayout>
    </LinearLayout>


</com.zhy.autolayout.AutoLinearLayout>