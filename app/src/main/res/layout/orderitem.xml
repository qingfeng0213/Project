<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/item_ircle"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/allorder_txt_dindan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="订单号"/>
        <TextView
            android:id="@+id/allorder_txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="订单时间"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/allorder_recy_item"
            android:layout_width="match_parent"
            android:layout_below="@+id/allorder_txt_dindan"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/allorder_txt_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共计2件需付款888元"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/allorder_recy_item"/>
        <Button
            android:id="@+id/allorder_btn_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/allorder_txt_sum"
            android:layout_margin="10dp"
            android:background="@drawable/site_button"
            android:text="删除订单"/>
        <Button
            android:id="@+id/allorder_btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/allorder_txt_sum"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="去支付"
            android:textColor="#FFF"
            android:background="#c60646"/>

    </RelativeLayout>
</RelativeLayout>
